<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.esame.note_15_06_2017.NewNoteActivity"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:showIn="@layout/activity_new_note">

    <TextView
        android:id="@+id/txt_category_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:inputType="none"
        android:hint="Scegli la categoria"
        android:drawableLeft="@android:drawable/ic_menu_agenda"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000" />

    <EditText
        android:id="@+id/edit_title_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titolo"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <EditText
        android:id="@+id/edit_content_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Nota"
        android:gravity="top"
        android:background="@color/transparent"
        android:textAppearance="@android:style/TextAppearance.Large"/>

</LinearLayout>
