<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gabrysuerz.anagrafiche_es_19_01_2017.MainActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">
    <ImageButton
        android:id="@+id/btn_image"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:id="@+id/linear_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_image"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Nome"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <EditText
            android:id="@+id/edit_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Cognome"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_name"
        android:hint="Data di nascita"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_date"
        android:hint="Email"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_email"
        android:hint="Telefono"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <LinearLayout
        android:id="@+id/linear_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_phone"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Indirizzo"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <EditText
            android:id="@+id/edit_home_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Civico"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large" />
    </LinearLayout>

    <EditText
        android:id="@+id/edit_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_add"
        android:hint="CittÃ "
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <EditText
        android:id="@+id/edit_cap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_city"
        android:hint="Cap"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <EditText
        android:id="@+id/edit_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_cap"
        android:hint="Province"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <EditText
        android:id="@+id/edit_Lat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_province"
        android:hint="Latitudine"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <EditText
        android:id="@+id/edit_Long"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_Lat"
        android:hint="Longitudine"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_Long"
        android:text="Inserisci" />
    </TableLayout>
</ScrollView>